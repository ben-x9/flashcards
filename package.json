{
  "name": "flashcards",
  "version": "0.0.1",
  "description": "a flashcard app for language learning",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=development && webpack-dev-server --content-base app/core --history-api-fallback --progress --inline --hot --debug --devtool cheap-module-eval-source-map --output-pathinfo",
    "test": "mocha-webpack test/**/*.ts",
    "test:watch": "npm run test -- --watch",
    "build": "NODE_ENV=production && webpack --optimize-minimize && mkdir -p build/ && mv bundle.js build/ && cp app/core/index.html build/"
  },
  "author": "Ben Lambert",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ben-x9/flashcards.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/mocha": "^2.2.38",
    "chai": "^3.5.0",
    "mocha": "^3.2.0",
    "mocha-webpack": "^0.7.0",
    "ts-loader": "^1.3.3",
    "tslint": "^4.3.1",
    "typescript": "^2.1.4",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "@types/lodash": "^4.14.50",
    "@types/path-to-regexp": "^1.0.29",
    "csstips": "0.0.3",
    "csx": "^8.2.1",
    "history": "^4.5.0",
    "jsondiffpatch": "^0.2.4",
    "lodash": "^4.17.4",
    "path-to-regexp": "^1.7.0",
    "snabbdom": "^0.6.3",
    "textfit": "^2.3.1",
    "typestyle": "^0.22.1"
  }
}
